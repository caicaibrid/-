/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.public{
    font-size:40rpx;
    margin:40rpx;
}
.scroll_view{
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.scroll_view_parent{
  height: 30%;
}
#red,#green,#blue{
  display: inline-block;
  width: 100%;
  height: 100%;
}
#red{
  background: red;
}
#green{
  background: green;
}
#blue{
  background: blue;
}
.scroll_view_y{
  height: 343.594rpx;
  white-space: normal;
}
.scroll_view_y #red,.scroll_view_y #green,.scroll_view_y #blue{
  display: block;
  width: 100%;
  height: 100%;
}