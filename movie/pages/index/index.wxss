/**index.wxss**/
view{
  padding: 0;
  margin: 0;
  border: 0;
  box-sizing: border-box;
}
.tag-scroll{
  width: 100%;
  height: 60rpx;
  white-space: nowrap;
}
.movie_list{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  border-top: 10rpx solid #eee;
}
.tag-scroll-item{
  display: inline-block;
  font-size: 24rpx;
  padding: 0 10rpx;
  line-height: 50rpx;
  margin:5rpx;
}
.tag-scroll-item.active{
  background: #4b8ccb;
  border-radius: 10rpx;
  color: #fff;
}
.movie_list .movie_list_list{
  width: 50%;
  float: left;
  padding: 10rpx;
  background: #eee;
  text-align: center;
}
.movie_list .movie_list_list .cover{
  width: 100%;
}
.movie_list .movie_list_list .title{
  font-size: 24rpx;
}
.movie_list .movie_list_list .rate{
  font-size: 28rpx;
  color: red;
  margin-left: 10rpx;
}
.movie_list .movie_list_list .new{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.none{
  display: none;
}
.movie_list .loading{
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.sort radio-group{
  display: flex;
  background: #000;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.sort .radio{
  flex: 1;
  padding: 20rpx 0
}